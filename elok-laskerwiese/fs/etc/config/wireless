
config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11ng'
	option macaddr '24:a4:3c:42:b6:cf'
	list ht_capab 'SHORT-GI-40'
	list ht_capab 'TX-STBC'
	list ht_capab 'RX-STBC1'
	list ht_capab 'DSSS_CCK-40'
	option disabled '0'
	option country 'DE'
	option channel '9'
	option noscan '1'
	option distance '1000'
	option htmode 'HT20'

config wifi-iface
	option bssid '92:CA:FF:EE:BA:BE'
	option device 'radio0'
	option encryption 'none'
	option ifname 'adhoc2'
	option mode 'adhoc'
	option network 'adhoc2'
	option ssid 'ch9.freifunk.net'

config wifi-iface
	option device 'radio0'
	option encryption 'none'
	option ifname 'ap2'
	option isolate '1'
	option mode 'ap'
	option network 'mesh'
	option ssid 'berlin.freifunk.net'

