config wifi-device 'radio0'
	option channel '44'
	option country 'DE'
	option distance '1000'
	option htmode 'HT20'
	option hwmode '11a'
	option macaddr 'dc:9f:db:64:12:8a'
	option mcast_rate '6000'
	option noscan '1'
	option txpower '18'
	option type 'mac80211'

config wifi-iface
	option bssid '02:44:CA:FF:EE:EE'
	option device 'radio0'
	option encryption 'none'
	option mode 'adhoc'
	option network 'wireless0'
	option ssid 'ch44.freifunk.net'

config wifi-iface
	option device 'radio0'
	option encryption 'none'
	option mode 'ap'
	option network 'mesh'
	option ssid 'berlin.freifunk.net'

