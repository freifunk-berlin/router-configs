
config wifi-device 'radio0'
	option chanbw '20'
	option channel '9'
	option country 'DE'
	option disabled '0'
	option diversity '1'
	option htmode 'HT20'
	option hwmode '11g'
	option path 'pci0000:00/0000:00:00.0'
	option rxantenna 'all'
	option txantenna 'all'
	option txpower '18'
	option type 'mac80211'

config wifi-iface
	option device 'radio0'
	option encryption 'none'
	option ssid 'ch9.freifunk.net'
	option bssid '92:CA:FF:EE:BA:BE'
	option mode 'adhoc'
	option network 'wireless0'
	option mcast_rate '6000'

