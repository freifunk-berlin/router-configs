
config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11na'
	option path 'ffe09000.pcie/pci0000:00/0000:00:00.0/0000:01:00.0'
	list ht_capab 'LDPC'
	list ht_capab 'SHORT-GI-20'
	list ht_capab 'SHORT-GI-40'
	list ht_capab 'TX-STBC'
	list ht_capab 'RX-STBC1'
	list ht_capab 'DSSS_CCK-40'
	option disabled '0'
	option country 'DE'
	option noscan '1'
	option distance '1000'
#	option txpower '30'
	option channel '44'
	option htmode 'HT40+'

config wifi-iface
	option bssid '02:44:CA:FF:EE:EE'
	option device 'radio0'
	option encryption 'none'
	option ifname 'adhoc5'
	option mode 'adhoc'
	option network 'adhoc5'
	option ssid 'ch44.freifunk.net'

config wifi-device 'radio1'
	option type 'mac80211'
	option hwmode '11ng'
	option path 'ffe0a000.pcie/pci0001:02/0001:02:00.0/0001:03:00.0'
	list ht_capab 'LDPC'
	list ht_capab 'SHORT-GI-20'
	list ht_capab 'SHORT-GI-40'
	list ht_capab 'TX-STBC'
	list ht_capab 'RX-STBC1'
	list ht_capab 'DSSS_CCK-40'
	option disabled '0'
	option country 'DE'
	option channel '1'
	option txpower '23'
	option htmode 'HT20'

config wifi-iface
	option ifname 'ap5'
	option encryption 'none'
	option device 'radio0'
	option mode 'ap'
	option ssid 'berlin.freifunk.net'
	option network 'mesh'
#	option isolate '1'

config wifi-iface
	option ifname 'ap2'
	option encryption 'none'
	option device 'radio1'
	option mode 'ap'
	option ssid 'berlin.freifunk.net'
	option network 'mesh'
#	option isolate '1'

