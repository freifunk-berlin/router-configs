
config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'lan'
	option type 'bridge'
	option proto 'static'
	option ip6assign '64'
	option ipaddr '104.0.2.1'
	option dns '2002:d596:2a92:1:71:53:: 2002:5968:c28e::53 88.198.178.18 141.54.1.1 212.204.49.83 8.8.8.8 8.8.4.4'
	option netmask '255.255.255.240'
	option ifname 'eth0.100'

config interface 'wan'
	option ifname 'eth1'
	option proto 'static'
	option peerdns '0'
	option ipaddr '192.168.1.1'
	option netmask '255.255.255.0'

config globals 'globals'
	option ula_prefix 'fd8f:44c9:c972::/48'

config interface 'wireless0'
	option dns '2002:d596:2a92:1:71:53:: 2002:5968:c28e::53 88.198.178.18 141.54.1.1 212.204.49.83 8.8.8.8 8.8.4.4'
	option ip6assign '64'
	option netmask '255.0.0.0'
	option ipaddr '104.0.2.201'
	option proto 'static'

config route
	option interface 'lan'
	option target '192.168.0.0'
	option netmask '255.255.255.0'
	option gateway '104.0.2.9'

config interface 'bat0'
	option ifname 'bat0'
	option proto 'none'
	option mtu '1528'

config interface 'wireless0bat'
	option proto 'batadv'
	option mtu '1528'
	option mesh 'bat0'
	option ap_isolation '1'

