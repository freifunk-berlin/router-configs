
config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11ng'
	option macaddr '24:a4:3c:78:83:78'
	list ht_capab 'SHORT-GI-40'
	list ht_capab 'TX-STBC'
	list ht_capab 'RX-STBC1'
	list ht_capab 'DSSS_CCK-40'
	option disabled '0'
	option country 'DE'
	option noscan '1'
	option diversity '1'
	option channel '13'
	option distance '2000'
	option rxantenna 'all'
	option txantenna 'all'
	option htmode 'HT20'
	option txpower '18'
	option basic_rate '6000 9000 12000 18000 24000 36000 48000 54000'
	option beacon_int '250'

config wifi-iface
	option bgscan '0'
	option bssid 'D2:CA:FF:EE:BA:BE'
	option device 'radio0'
	option encryption 'none'
	option mcast_rate '24000'
	option mode 'adhoc'
	option network 'wireless0'
	option probereq '1'
	option ssid 'ch13.freifunk.net'
	option sw_merge '1'

config wifi-iface
	option device 'radio0'
	option encryption 'none'
	option isolate '1'
	option mcast_rate '6000'
	option mode 'ap'
	option network 'wireless0ap'
	option ssid 'berlin.freifunk.net'

