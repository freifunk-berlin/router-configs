
config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fd69:d842:9dc2::/48'

config interface 'wan'
	option ifname 'eth1'
	option proto 'static'
	option ipaddr '192.168.42.1'
	option netmask '255.255.255.0'
	option ip6assign '60'
	
config interface 'lan'
	option ifname 'eth0'
        option proto 'batadv'
        option mesh 'bat0'
      
config interface 'adhoc2'
        option mtu '1528'
        option proto 'batadv'
        option mesh 'bat0'
        
config interface 'adhoc5'
        option mtu '1528'
        option proto 'batadv'
        option mesh 'bat0'
	
config interface 'mesh'
	option ifname 'bat0'
	option type 'bridge'
	option proto 'dhcp'

config interface 'mesh6'
	option ifname '@mesh'
	option proto 'dhcpv6'

config switch
	option name 'switch0'
	option reset '1'
	option enable_vlan '1'

config switch_vlan
	option device 'switch0'
	option vlan '1'
	option ports '0 1 2 3 4'

