
config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11ng'
	option macaddr '24:a4:3c:78:83:eb'
	list ht_capab 'SHORT-GI-40'
	list ht_capab 'TX-STBC'
	list ht_capab 'RX-STBC1'
	list ht_capab 'DSSS_CCK-40'
	option disabled '0'
	option country 'DE'
	option channel '13'
#	option noscan '1'
	option distance '1000'
	option htmode 'HT40-'
	option diversity '1'

config wifi-iface
	option device 'radio0'
	option encryption 'none'
	option ifname 'wlan-ap'
	option mode 'ap'
	option network 'wireless0dhcp'
	option ssid 'freifunk-martin-luther-no'

config wifi-iface
	option bssid 'D2:CA:FF:EE:BA:BE'
	option device 'radio0'
	option encryption 'none'
	option ifname 'wlan-adhoc'
	option mode 'adhoc'
	option network 'wireless0'
	option ssid 'ch13.freifunk.net'

