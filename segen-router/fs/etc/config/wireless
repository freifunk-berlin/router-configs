
config wifi-device 'radio0'
	option type 'mac80211'
	option channel '36'
	option hwmode '11na'
	option path 'ffe09000.pcie/pci0000:00/0000:00:00.0/0000:01:00.0'
	list ht_capab 'LDPC'
	list ht_capab 'SHORT-GI-20'
	list ht_capab 'SHORT-GI-40'
	list ht_capab 'TX-STBC'
	list ht_capab 'RX-STBC1'
	list ht_capab 'DSSS_CCK-40'
	option disabled '0'
	option country 'DE'
	option distance '1000'
	option diversity '1'
	option noscan '1'
	option outdoor '0'
	option htmode 'HT40+'

config wifi-device 'radio1'
	option type 'mac80211'
	option hwmode '11ng'
	option path 'ffe0a000.pcie/pci0001:02/0001:02:00.0/0001:03:00.0'
	list ht_capab 'LDPC'
	list ht_capab 'SHORT-GI-20'
	list ht_capab 'SHORT-GI-40'
	list ht_capab 'TX-STBC'
	list ht_capab 'RX-STBC1'
	list ht_capab 'DSSS_CCK-40'
	option disabled '0'
	option country 'DE'
	option distance '50'
	option diversity '1'
	option channel '1'
	option noscan '1'
	option outdoor '0'
	option htmode 'HT40+'
	option txpower '8'

config wifi-iface
	option device 'radio0'
	option encryption 'none'
	option mode 'ap'
	option network 'wireless0dhcp'
	option ssid 'AP36.freifunk.net'

config wifi-iface
	option bgscan '0'
	option bssid '02:36:CA:FF:EE:EE'
	option device 'radio0'
	option encryption 'none'
	option mode 'adhoc'
	option network 'wireless0'
	option probereq '1'
	option ssid 'ch36.freifunk.net'
	option sw_merge '1'

config wifi-iface
	option device 'radio1'
	option encryption 'none'
	option mode 'ap'
	option network 'wireless1dhcp'
	option ssid 'AP1.freifunk.net'

config wifi-iface
	option bgscan '0'
	option bssid '12:CA:FF:EE:BA:BE'
	option device 'radio1'
	option encryption 'none'
	option mode 'adhoc'
	option network 'wireless1'
	option probereq '1'
	option ssid 'ch1.freifunk.net'
	option sw_merge '1'

